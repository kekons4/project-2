<div class="category-cont">
    {{#each posts as |post| }}
    <div class="card">
        <div class="card-header">
            <h2>{{post.category.name}}</h2>
        </div>
        <div class="card-body">
            {{!-- {{#each posts as |post|}} --}}
            <div class="post-card">
                <h5>{{post.title}}</h5>
                <p>{{post.body}}</p>
                <span>{{post.username}}</span>
            </div>
            {{!-- {{/each}} --}}
        </div>
    </div>
    {{/each}}
</div>