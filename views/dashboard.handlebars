<div class="container">
    <div class="post-cont">
        {{#each posts as |post|}}
        <div class="my-post-card">
            <a href="/dashboard/update/{{post.id}}">
                <span>{{post.title}}</span>
            </a>
            <span>{{format_date post.date_created}}</span>
            <a id="delete-post"><i data-id={{post.id}} data-user={{post.user_id}} class="fa fa-trash"></i></a>
        </div>
        {{/each}}
        <a class="new-post" id="new-post" href="/dashboard/post">+Post</a>
    </div>
</div>

