<form class="blog-update">
    <div class="container">
        <div class="tv-show">
            <div class="card-header">
                <h3>Update Post:</h3>
            </div>
            <div class="card-body">
                <label for="post-title">Title:</label>
                <input type="text" id="post-title" value={{post.title}}/>
                <br/>
                <label for="post-body">Body:</label>
                <textarea id="post-body" cols="30" rows="10">{{post.body}}</textarea>
                <br/>
                <select name="post-category" id="post-category">
                    <option value="5">Books</option>
                    <option value="1">TV Shows</option>
                    <option value="2">Movies</option>
                    <option value="3">Music</option>
                    <option value="4">Sports</option>
                </select>
                <button id="update-post" type="submit" data-user={{user_id}} data-post={{post_id}}>Update</button>
            </div>
        </div>
    </div>
</form>

<script src="/js/updatePost.js"></script>