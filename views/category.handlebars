<div class="card">
    <div class="card-header">
        <h2>{{category_name}}</h2>
    </div>
    <div class="card-body">
        {{#each posts as |post|}}
            <div class="post-card">
                <a href="/post/{{post.id}}">
                    <h5>{{post.title}}</h5>
                    <p>{{post.body}}</p>
                    <span>{{post.username}}</span>
                    <span>{{format_date post.date_created}}</span>
                </a>
            </div>
        {{/each}}
    </div>
</div>

<script src="/js/newPost.js"></script>