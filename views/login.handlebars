<form action="submit">
    <div class="card">
        <div class="card-header">
            <h3>Login</h3>
        </div>
        <div class="card-body">
            <label for="email-login">Email:</label>
            <input id="email" type="email"/>
            <br/>
            <label for="password-login">Password:</label>
            <input id="password" type="password"/>
            <button id="login-btn" type="submit">Login</button>
        </div>
    </div>
</form>