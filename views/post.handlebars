<div class="container">    
    <div class="tv-show">
        <div class="card-header">
            <h2>{{post.title}}</h2>
        </div>
        <div class="post-card">
            <p>{{post.body}}</p>
            <span>User: {{post.user.username}}</span>
            <span>Date Created: {{format_date post.date_created}}</span>
            <br/>
            <div class="category-cont">
                <div class="likes-cont">
                    <span>{{post.likes}}</span><a id="add-like" data-post={{post.id}} data-count={{post.likes}} data-user={{post.user_id}}><i class="fa fa-thumbs-up"></i></a>
                    <span>{{post.dislikes}}</span><a id="add-dislike" data-post={{post.id}} data-count={{post.dislikes}} data-user={{post.user_id}}><i class="fa fa-thumbs-down"></i></a>
                </div>
            </div>
        </div>
    </div>

    {{#if logged_in}}
    <form class="create-comment" action="submit">
        <div class="comment-card">
            <label for="comment-body"><strong>Share your thoughts:</strong></label>
            <input id="body" type="text" placeholder="add comment here......">
            <button id="create-comment" data-user={{user_id}} data-post={{post_id}} type="submit">comment</button>
        </div>
    </form>
    {{/if}}

    <div class="comment-cont">
        <h2>Comments:</h2>
        {{#each comments as |comment|}}
        <div class="comment-card">
            <p>{{comment.body}}</p>
            <span>User: {{comment.user.username}}</span>
            <span>Date Created: {{format_date comment.date_created}}</span>
            <div class="likes-cont">
                <span>{{comment.likes}}</span><a id="add-cm-like" data-comment={{comment.id}} data-count={{comment.likes}} data-user={{comment.user_id}}><i class="fa fa-thumbs-up"></i></a>
                <span>{{comment.dislikes}}</span><a id="add-cm-dislike" data-comment={{comment.id}} data-count={{comment.dislikes}} data-user={{comment.user_id}}><i class="fa fa-thumbs-down"></i></a>
            </div>
        </div>
        {{/each}}
    </div>    
</div>

